@model UserManagementService.Models.Controllers.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

@section scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Reset Password</h3>
            </div>
            <div class="panel-body">
                <form asp-route="ResetPassword">
                    <fieldset>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password2"></label>
                            <input asp-for="Password2" class="form-control" placeholder="Repeat Password">
                            <span asp-validation-for="Password2" class="invalid-feedback"></span>
                            <input asp-for="Code" />
                            <input asp-for="UserId" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" name="button" value="Update">Update</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>

